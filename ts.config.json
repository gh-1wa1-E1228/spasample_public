{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "types": [
            "node",
            "fs-extra"
        ]
    },
    "include": ["resources/js/**/*"],
    "exclude": ["node_modules"]
}
